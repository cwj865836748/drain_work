/* pages/merchantList/merchantList.wxss */
@import '/components/noData/noData.wxss';
.searchHead {
  height: 120rpx;
  background: #ffffff;
  padding: 0 20rpx 0 30rpx;
}
.searchHead>view {
  color: #008ffe;
}
.van-search {
  padding:0!important;
  margin-right:20rpx;
  border-radius: 36rpx;
  overflow: hidden;

}
.van-field__body--search {
  font-size: 24rpx!important;
  font-weight: bold;
}
.van-search__content {
  height:72rpx!important;
  padding-left:22rpx!important;
  background: #f8f8f9!important;
}
.scroll {
  flex:1;
  overflow: hidden;
}
.merchantList {
  padding: 30rpx;
}
.merchantOne {
  padding:0 30rpx;
  margin-bottom: 30rpx;
  background:#fff;
  border-radius: 12rpx;
}
.merchantOne:last-child {
  margin-bottom: 0rpx;
}
.merchantHead {
  height:100rpx;
  border-bottom:2rpx solid #f9f9f9;
  font-size: 30rpx;
  font-weight: bold;
  color:var(--c1);
  margin-bottom: 24rpx;
}
.merchantLeft {
  width: 334rpx;
}
.merchantType {
  flex:1;
}
.merchantType:nth-child(-n+4) {
  margin-bottom: 46rpx;
}
.merchantFoot{
  height:100rpx;
  border-top:2rpx solid #f9f9f9;
  font-size: 24rpx;
  color:var(--c2);
  margin-top: 22rpx;
}
.merchantFoot>image {
  width: 12rpx;
  height: 20rpx;
}