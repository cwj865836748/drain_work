/* pages/caseDetail/caseDetail.wxss */

.caseDetail {
  padding: 0 30rpx 130rpx;
}

.caseDetailHead {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f9f9f9;
}

.caseDetailHeadCode {
  color: var(--c2);
}

.caseDetailHeadCode>view:first-child {
  margin-bottom: 22rpx;
}

.caseDetailContent {
  padding: 28rpx 0 48rpx;
  border-bottom: 2rpx solid #f9f9f9;
}

.caseDetailOne {
  margin-bottom: 40rpx;
}

.caseDetailOne:last-child {
  margin-bottom: 0rpx;
}
.caseStauts {
  font-size: 30rpx;
}
.caseAddress>text {
  font-size: 30rpx;
  color: #008ffe;
  text-decoration: underline;
  font-weight: bold;
}

.caseAddress>image {
  width: 36rpx;
  height: 36rpx;
  margin-left: 8rpx;
}

.caseDetailMsg {
  padding: 42rpx 0 0rpx;
}
.result {
  border-top: 2rpx solid #f9f9f9;
  margin-top: 34rpx;
}

.caseDetailUp {
  font-size: 30rpx;
  color: var(--c1);
  margin-bottom: 24rpx;
}

.caseDetailUp::before {
  content: "";
  width: 10rpx;
  height: 34rpx;
  background: #008ffe;
  border-radius: 2rpx;
  margin-right: 6rpx;
}

.caseDetailImgList {
  margin-bottom: 42rpx;
}

.caseDetailImg {
  width: 214rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 24rpx;
}
.caseDetailImg:nth-child(n+4) {
  margin-top: 24rpx;
}

.caseDetailImg:nth-child(3n) {
  margin-right: 0;
}

.caseDetailImg>image {
  width: 100%;
  height: 100%;
}

.evaluationStatus {
  padding: 40rpx 30rpx 0;
}

.evaluationTitle {
  color: #000b1d;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 36rpx;
}

.isEvaluation {
  height: 92rpx;
  background: #fafafa;
  font-size: 28rpx;
  color: #6a7484;
  padding-left: 22rpx;
}

.isEvaluationActive {
  color: #000b1d;
  font-weight: bold;
}

.isEvaluation>image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.submitEvaluation {
  height: 88rpx;
  background: #008ffe;
  border-radius: 6rpx;
  font-size: 34rpx;
  color: #ffffff;
  margin:38rpx 0 10rpx;
}
